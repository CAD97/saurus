resource_name = "APWidget"
script/source = "@tool
class_name APWidget
extends Control


@export var flip := false:
	get: return %TextureRect.flip_h
	set(new):
		%TextureRect.flip_h = new
		var bar_anchor_left = %ProgressBar.anchor_left
		var bar_anchor_right = %ProgressBar.anchor_right
		if %TextureRect.flip_h:
			%TextureRect.set_anchors_and_offsets_preset(Control.PRESET_BOTTOM_RIGHT)
			%ProgressBar.fill_mode = ProgressBar.FILL_END_TO_BEGIN
			%Label.horizontal_alignment = HORIZONTAL_ALIGNMENT_RIGHT
			%ProgressBar.anchor_left = 1.0 - bar_anchor_right
			%ProgressBar.anchor_right = 1.0 - bar_anchor_left
		else:
			%TextureRect.set_anchors_and_offsets_preset(Control.PRESET_BOTTOM_LEFT)
			%ProgressBar.fill_mode = ProgressBar.FILL_BEGIN_TO_END
			%Label.horizontal_alignment = HORIZONTAL_ALIGNMENT_LEFT
			%ProgressBar.anchor_right = 1.0 - bar_anchor_left
			%ProgressBar.anchor_left = 1.0 - bar_anchor_right


@export var value: int = 10:
	get: return int(%ProgressBar.value)
	set(new):
		if is_node_ready():
			%ProgressBar.value = float(new)
			_update_label()


@export var max_value: int = 20:
	get: return int(%ProgressBar.max_value)
	set(new):
		if is_node_ready():
			%ProgressBar.max_value = float(new)
			_update_label()


func _update_label():
	var ts = TextServerManager.get_primary_interface()
	%Label.text = \"%d/%d\" % [value, max_value].map(str).map(ts.format_number)
"

