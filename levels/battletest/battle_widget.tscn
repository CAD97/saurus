resource_name = "BattleWidget"
script/source = "@tool
extends Control


@onready var _dino_layout_widget: AspectRatioContainer = %DinoLayoutWidget
@onready var _texture_rect: TextureRect = %TextureRect
@onready var _progress_bar: TextureProgressBar = %ProgressBar
@onready var _label: Label = %Label


@export var flip := false:
	set(value):
		flip = value
		if is_node_ready():
			_sync_flip()


var ap: int = 10:
	get: return int(_progress_bar.value)
	set(value):
		if is_node_ready():
			_progress_bar.value = float(value)
			_update_label()


var max_ap: int = 20:
	get: return int(_progress_bar.max_value)
	set(value):
		if is_node_ready():
			_progress_bar.max_value = float(value)
			_update_label()


func _ready() -> void:
	_sync_flip()
	_update_label()


func _sync_flip() -> void:
	if _texture_rect.flip_h == flip:
		return

	_texture_rect.flip_h = flip
	var bar_anchor_left := _progress_bar.anchor_left
	var bar_anchor_right := _progress_bar.anchor_right
	if flip:
		_texture_rect.set_anchors_and_offsets_preset(Control.PRESET_BOTTOM_RIGHT)
		_progress_bar.fill_mode = ProgressBar.FILL_END_TO_BEGIN
		_label.horizontal_alignment = HORIZONTAL_ALIGNMENT_RIGHT
		_progress_bar.anchor_left = 1.0 - bar_anchor_right
		_progress_bar.anchor_right = 1.0 - bar_anchor_left
		_dino_layout_widget.scale.x = -1.0
	else:
		_texture_rect.set_anchors_and_offsets_preset(Control.PRESET_BOTTOM_LEFT)
		_progress_bar.fill_mode = ProgressBar.FILL_BEGIN_TO_END
		_label.horizontal_alignment = HORIZONTAL_ALIGNMENT_LEFT
		_progress_bar.anchor_right = 1.0 - bar_anchor_left
		_progress_bar.anchor_left = 1.0 - bar_anchor_right
		_dino_layout_widget.scale.x = 1.0


func _update_label() -> void:
	_label.text = \"%02d/%02d\" % [ap, max_ap]
"

